<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/credential_bg_screen">

    <TextView
        android:id="@+id/activity_credential_iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Speak Up"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/activity_credential_tv_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_credential_iv_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Practice for Today and Tomorrow"
        android:textStyle="italic"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/activity_credential_et_email"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_credential_tv_headline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/credential_bg_edit_text"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:textColorHint="@color/white"
        android:drawableLeft="@drawable/credential_ic_email_white"
        android:drawablePadding="20dp"
        android:padding="10dp" />

    <EditText
        android:id="@+id/activity_credential_et_password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_credential_et_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/credential_bg_edit_text"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:drawableLeft="@drawable/credential_ic_locked_white"
        android:drawablePadding="20dp"
        android:padding="10dp" />

    <Button
        android:id="@+id/activity_credential_btn_login"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_credential_et_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Login"
        android:textColor="@color/white"
        android:background="@drawable/credential_bg_button"/>

    <Button
        android:id="@+id/activity_credential_btn_register"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_credential_btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Create an account"
        android:textColor="@color/white"
        android:background="@drawable/credential_bg_button"/>

    <TextView
        android:id="@+id/activity_credential_tv_error_message"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/activity_credential_btn_register"
        android:visibility="gone"
        android:textColor="@color/colorAccent"/>

</RelativeLayout>