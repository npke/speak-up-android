<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/activity_credentials_iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/activity_credentials_tv_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_credentials_iv_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Speak Up" />

    <EditText
        android:id="@+id/activity_credentials_et_email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_credentials_tv_headline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:inputType="textEmailAddress"
        android:hint="Email" />
    <EditText
        android:id="@+id/activity_credentials_et_password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_credentials_et_email"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:hint="Password" />
    <Button
        android:id="@+id/activity_credentials_btn_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_credentials_et_password"
        android:layout_centerHorizontal="true"
        android:text="Login to my account" />

    <Button
        android:id="@+id/activity_credentials_btn_register"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_credentials_btn_login"
        android:layout_centerHorizontal="true"
        android:text="Register" />

    <TextView
        android:id="@+id/activity_credentials_tv_error_message"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/activity_credentials_btn_register"
        android:visibility="gone"
        android:textColor="@color/colorAccent"/>

</RelativeLayout>