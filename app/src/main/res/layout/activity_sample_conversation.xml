<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vn.coderschool.speakup.view.SampleConversationActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_sample_conversations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:visibility="visible"
        app:tabBackground="@color/colorPrimary"
        app:tabIndicatorColor="@color/colorPrimaryDark"
        app:tabSelectedTextColor="#3971d1"
        app:tabTextColor="@android:color/white" />

    <it.neokree.materialtabs.MaterialTabHost
        android:id="@+id/material_tabhost"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vie_pager_sample_conversations"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</LinearLayout>
