<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:text="Check your level" />

    <TextView
        android:id="@+id/text_view_question_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Question 1/10"
        android:layout_below="@+id/text_view_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/text_view_question_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_question_number"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/text_view_question_number"
        android:layout_toRightOf="@+id/text_view_question_number"
        android:text="Hi, How is going?" />

    <RadioButton
        android:id="@+id/radio_button_answer_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_view_question_content"
        android:layout_alignStart="@+id/text_view_question_content"
        android:layout_below="@+id/text_view_question_content"
        android:layout_marginTop="15dp"
        android:text="Answer 1" />

    <RadioButton
        android:id="@+id/radio_button_answer_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radio_button_answer_1"
        android:layout_alignStart="@+id/radio_button_answer_1"
        android:layout_below="@+id/radio_button_answer_1"
        android:text="Answer 2" />

    <RadioButton
        android:id="@+id/radio_button_answer_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radio_button_answer_2"
        android:layout_alignStart="@+id/radio_button_answer_2"
        android:layout_below="@+id/radio_button_answer_2"
        android:text="Answer 3" />

    <RadioButton
        android:id="@+id/radio_button_answer_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radio_button_answer_3"
        android:layout_alignStart="@+id/radio_button_answer_3"
        android:layout_below="@+id/radio_button_answer_3"
        android:text="Answer 4" />

    <Button
        android:id="@+id/button_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:layout_below="@+id/radio_button_answer_4"
        android:layout_alignLeft="@+id/radio_button_answer_4"
        android:layout_alignStart="@+id/radio_button_answer_4"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:text="Next"
        android:layout_alignBaseline="@+id/button_previous"
        android:layout_alignBottom="@+id/button_previous"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/text_view_question_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_view_question_content"
        android:layout_alignStart="@+id/text_view_question_content"
        android:layout_below="@+id/text_view_question_number"
        android:layout_marginTop="25dp"
        android:text="Which is the best response to:" />
</RelativeLayout>